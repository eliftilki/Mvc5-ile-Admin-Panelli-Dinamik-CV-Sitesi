@using WebApplication4.Models.Entity
@model List<TblIletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                     
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach(var item in Model) {
                                        <div class="time-label">
                                            <span class="bg-danger">
                                               @(((DateTime)item.Tarih).ToString("dd-MM-yyyy"))
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">

                                                <h3 class="timeline-header">@item.AdSoyad (@item.Mail) sent you an email</h3>
                                                <h3 class="timeline-header">Konu: @item.Konu</h3>
                                                <div class="timeline-body">Mesaj:
                                                    @item.Mesaj
                                                </div>

                                            </div>
                                        </div>
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
     
    </section>
</body>
</html>

